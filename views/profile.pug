extends layout

block content
    .container
        h1 Your profile
        p.fw-bold Email
        p= email
        p.fw-bold Phone
        p= phone
        p.fw-bold High score
        p= score
        p.fw-bold API key
        p= api_key
        form(action='/users/key_reset', method='post')
            input(type='submit', value='Reset API key').btn.btn-outline-danger
